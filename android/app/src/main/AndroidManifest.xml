<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 권한 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <!-- Android 13+ 미디어 접근 -->
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />
    <!-- 하위 버전 호환 (targetSdk<33일 때만 효력) -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <!-- 외부 앱/스킴 조회(결제/지도 등) -->
    <queries>
        <!-- Kakao -->
        <package android:name="com.kakao.talk" />
        <package android:name="com.kakaopay.app" />
        <!-- Kakao 지도 앱(딥링크 열 경우 대비) -->
        <package android:name="net.daum.android.map" />

        <!-- 결제/보안 앱들 (중복 제거하여 정리) -->
        <package android:name="com.nhn.android.search" />
        <package android:name="com.samsung.android.spay" />
        <package android:name="com.samsung.android.spaylite" />
        <package android:name="net.ib.android.smcard" />
        <package android:name="com.mobiletoong.travelwallet" />
        <package android:name="com.ssg.serviceapp.android.egiftcertificate" />
        <package android:name="com.nhnent.payapp" />
        <package android:name="com.lottemembers.android" />
        <package android:name="viva.republica.toss" />
        <package android:name="com.shinhan.smartcaremgr" />
        <package android:name="com.shinhan.sbanking" />
        <package android:name="com.shcard.smartpay" />
        <package android:name="com.shinhancard.smartshinhan" />
        <package android:name="com.hyundaicard.appcard" />
        <package android:name="kr.co.samsungcard.mpocket" />
        <package android:name="nh.smart.nhallonepay" />
        <package android:name="com.kbcard.cxh.appcard" />
        <package android:name="com.kbstar.liivbank" />
        <package android:name="com.kbstar.reboot" />
        <package android:name="com.kbstar.kbbank" />
        <package android:name="kvp.jjy.MispAndroid320" />
        <package android:name="com.lcacApp" />
        <package android:name="com.hanaskcard.paycla" />
        <package android:name="com.hanaskcard.rocomo.potal" />
        <package android:name="kr.co.hanamembers.hmscustomer" />
        <package android:name="kr.co.citibank.citimobile" />
        <package android:name="com.wooricard.wpay" />
        <package android:name="com.wooricard.smartapp" />
        <package android:name="com.wooribank.smart.npib" />
        <package android:name="com.lguplus.paynow" />
        <package android:name="com.kftc.bankpay.android" />
        <package android:name="com.fineapps.bankpay" />
        <package android:name="com.TouchEn.mVaccine.webs" />
        <package android:name="kr.co.shiftworks.vguardweb" />
        <package android:name="com.ahnlab.v3mobileplus" />
        <package android:name="com.lottecard" />
    </queries>

    <application
        android:name="${applicationName}"
        android:label="알바일주"
        android:icon="@mipmap/ic_launcher"
        android:usesCleartextTraffic="true"
        android:theme="@style/LaunchTheme"
        android:networkSecurityConfig="@xml/network_security_config">

        <!-- Kakao 네이티브 앱 키 (kakao_maps_flutter용) -->
        <meta-data
            android:name="com.kakao.sdk.AppKey"
            android:value="@string/kakao_app_key" />

        <!-- FCM 기본 채널 -->
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_channel_id"
            android:value="high_importance_channel" />

        <meta-data
            android:name="flutterEmbedding"
            android:value="2" />

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:hardwareAccelerated="true"
            android:configChanges="orientation|keyboardHidden|keyboard|screenSize|smallestScreenSize|locale|layoutDirection|fontScale|screenLayout|density|uiMode"
            android:windowSoftInputMode="adjustResize">

            <!-- 런처 -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <!-- FCM 클릭 -->
            <intent-filter>
                <action android:name="FLUTTER_NOTIFICATION_CLICK" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

            <!-- 딥링크 (albailju://...) -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="albailju" android:host="callback" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="albailju" />
            </intent-filter>
        </activity>

        <!-- 카카오 로그인 -->
        <activity
            android:name="com.kakao.sdk.flutter.AuthCodeCustomTabsActivity"
            android:exported="true"
            android:launchMode="singleTask">
            <intent-filter android:label="flutter_web_auth">
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                
                <data 
                    android:scheme="kakaof1091d43764e475154945e49f2aec294" 
                    android:host="oauth"/>
            </intent-filter>
        </activity>

        <!-- awesome_notifications -->
        <receiver
            android:name="me.carda.awesome_notifications.notifications.receivers.ActionReceiver"
            android:exported="true" />
        <receiver
            android:name="me.carda.awesome_notifications.notifications.receivers.DismissedReceiver"
            android:exported="true" />
        <receiver
            android:name="me.carda.awesome_notifications.notifications.receivers.NotificationReceiver"
            android:exported="true" />

        <service
            android:name="me.carda.awesome_notifications.notifications.services.NotificationService"
            android:exported="false" />
        <service
            android:name="me.carda.awesome_notifications.notifications.services.ForegroundService"
            android:exported="false" />
    </application>
</manifest>